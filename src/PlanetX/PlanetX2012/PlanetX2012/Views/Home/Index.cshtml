@model PlanetX2012.Models.ContentModel.HomeContent
<div class="column-1">
    <div class="leftcol">
        <h3>Money</h3>
        <p>
            <img src="../../Content/css/Images/money_bag.png" alt="Money Bag"
                class="image" />
            @Html.Partial("../PartialViews/Finance/Finance", Model.finance)
            @Ajax.ActionLink(
                                "Education Management",
                                "EducationModal",
                                "Education",
                                null,
                                new AjaxOptions
                                {
                                    UpdateTargetId = "education-modal-dialog",
                                    OnBegin = "Dialog.Opening({id: 'education-modal-dialog'})",
                                    OnSuccess = "Dialog.Open({title: 'Education Management'})"
                                },
                                new
                                {
                                    @class = ""
                                }
                            )
        </p>
        <p>
            @Ajax.ActionLink(
                                "Business Management",
                                "BusinessModal",
                                "Finance",
                                null,
                                new AjaxOptions
                                {
                                    UpdateTargetId = "business-modal-dialog",
                                    OnBegin = "Dialog.Opening({id: 'business-modal-dialog'})",
                                    OnSuccess = "Dialog.Open({title: 'Business Management'})"
                                },
                                new
                                {
                                    @class = ""
                                }
                            )
        </p>
    </div>
    <div class="leftcol" id="postFeed">
        @Html.Partial("../PartialViews/Post/Post", new DAO.Models.Post())
    </div>
</div>
<div class="column-2">
    <div class="rightcol">
        <h3>Profile Summary</h3>
        <p>
            <img src="../../Content/css/images/image.gif" alt="Image" class="image" />
        </p>
        @Html.Partial("../PartialViews/User/Summary", Model)
    </div>
    <div class="rightcol">
        @Html.Partial("../PartialViews/Topics/TrendingTopics")
    </div>
</div>

