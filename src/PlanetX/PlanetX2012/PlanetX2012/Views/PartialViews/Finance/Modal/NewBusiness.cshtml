@model PlanetX2012.Models.ContentModel.BusinessContent
@using (Ajax.BeginForm("CreateNewBusiness", "Finance",
    new AjaxOptions
    {
        UpdateTargetId = "business-modal-dialog",
        OnBegin = "Dialog.Closing()",
        OnSuccess = "Dialog.Close()"
    },
             new
             {
                 @class = "contactform"
             }
            ))
{    
    @Html.ValidationSummary(false)
    <div class="newbusinessContainer">
        <div class="newbusinessContainerleft">
            <div id="businessCodes">
            </div>
            <div id="businessSubCodes"></div>
            @Html.TextBoxFor(model => model.Business.BusinessTypeId, new { @class = "hidden" })
            @Html.TextBoxFor(model => model.Business.BusinessSubtypeId, new { @class = "hidden" })
            @Html.TextBoxFor(model => model.Business.CityId, new { @class = "hidden" })
            @Html.TextBoxFor(model => model.Business.BusinessName, new { size = 35, placeholder="Business Name" })
            @Html.Partial("../PartialViews/Address/CityCountry")
        </div>
        <div class="newbusinessContainerright">
            <div>

                <p>
                    <label id="runningCostBusiness">Running Cost: 5000</label>
                </p>
                <p>
                    <label id="availableBalanceBusiness">Available Balance: 50000</label>
                </p>
                <p>
                    <label id="availableCredit">Available Credit: 50000</label>
                </p>
            </div>

            @Html.Partial("../PartialViews/Finance/Modal/BusinessGraph")

        </div>

    </div>

    <div style="clear: both">
        <input type="submit" value="Start Business" class="demo-button ui-state-default ui-corner-all" />
    </div>
    //<script src="../../../../Content/js/dropDown.js"></script>
    
    <script src="../../../../Content/js/openNewBusiness.js"></script>
    <script src="../../../../Content/js/cityCountryLookup.js"></script>


}