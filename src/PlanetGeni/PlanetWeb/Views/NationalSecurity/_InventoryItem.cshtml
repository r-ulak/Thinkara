<div class="container padding3centt" id="weaponInventorycontent-box">
    <div id="weaponInventorycontent-wrapper" data-bind="foreach: weaponDetailsDTO">
        <div class=" row">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-xs-3 col-md-3 text-center">
                        <i class="fa fa-5x text-info" data-bind="css: ImageFont"></i>
                    </div>
                    <div class="col-xs-7 col-md-7 section-box">
                        <h4>
                            <label data-bind="text: Name"></label>
                        </h4>
                        <p data-bind="text:Description" class="fontsize90"> </p>
                        <hr />

                    </div>
                    <div class="col-xs-2">
                        <input type="text" title="Weapon Condition"
                               data-bind="attr: {value: WeaponCondition , 'data-fgcolor': dialColor(), 'data-id': CountryWeaponId}"
                               class="dial pull-right">
                    </div>

                </div>
                <div class="row">
                    <div class="row rating-desc">
                        <div class="col-xs-12">
                            <div class="col-xs-3">
                                <span class="weapontitle">
                                    <!-- ko if: WeaponTypeCode.indexOf("A") > -1 -->
                                    Air
                                    <!-- /ko -->
                                    <!-- ko if: WeaponTypeCode.indexOf("L") > -1 -->
                                    Land
                                    <!-- /ko -->
                                    <!-- ko if: WeaponTypeCode.indexOf("S") > -1 -->
                                    Sea
                                    <!-- /ko -->
                                </span>
                            </div>
                            <div class="col-xs-4">
                                <i class="fa fa-shopping-cart"></i>
                                <span class="fontsize70" title="PurchasedAt" data-bind="text: PurchasedAt"></span>
                            </div>
                            <div class="col-xs-4">
                                <i class="fa icon-money28"> </i>
                                <strong class="fontsize70" title="Purchased Price" data-bind="text: numeral(PurchasedPrice).format('0,0.00a')"></strong>
                            </div>
                            <div class="col-xs-1">
                                <span class="pull-right" title="Quantity" data-bind="text: Quantity"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

