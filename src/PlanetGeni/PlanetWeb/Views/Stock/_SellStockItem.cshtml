<div class="col-md-12 col-xs-12 productbox">
    <div class="row">
        <div class="col-xs-6">
            <div class="pull-left">
                <span class="fa fa-info-circle fa-2x" data-toggle="popover" data-bind="attr:{'data-content':Description}"></span>
            </div><span class="fa fa-8x " data-bind="css: ImageFont"></span>
        </div>
        <div class="col-xs-6 ">
            <div class="row">
                <div class="col-xs-12">
                    <div class="pull-right" title="Cost of stock">
                        <i class="fa icon-money28 fa-1x" data-bind="css:DayChangeCss"></i>
                        <span class="fa-1x" data-bind="text:numeral(CurrentValue).format('0,0.00'), css:DayChangeCss">            </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="pull-right" title="DayChange">
                        <span class="fa-1x" data-bind="text:DayChangePlusMinus, css:DayChangeCss">            </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="pull-right" title="Day Change Percent">
                        <i class="fa-1x" data-bind=" css:DayChangeArrowCss"></i>
                        <span class="fa-1x" data-bind="css:DayChangeCss, text: DayChangePlusMinusPercent"></span>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-xs-10">
            <span class="text-info fa-2x" data-bind="text:StockName"></span>
        </div>
        <div class="col-xs-2 ">
            <div class="pull-right">
                <span class="text-info fa-1_5x" data-bind="text:Quantity"></span>
            </div>
        </div>
    </div>
    <div class="row padding3centt">
        <div class="col-xs-12">
            <input type="text" class="stockQuantity" value="0"  
                   data-bind="attr:{'data-index': $index, 'data-typeid':StockId}">
        </div>
    </div>
    <div class="row padding3centt ordertypegroup">
        <div class="col-xs-12">
            <fieldset>
                <legend class="text-warning fontsize120">
                    Order Type
                </legend>
                <div class="row">
                    <div title="Market Value">
                        <div class="checkbox">
                            <label>
                                <input type="radio" checked
                                       data-bind="attr:{'data-sid': StockId, 'data-index':$index, name: 'Stock' + UserStockId}, click: $parent.onMarketValueCheck">  Market Value
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div title="Limit Order">
                        <div class="checkbox">
                            <label>
                                <input type="radio"
                                       data-bind="attr:{'data-sid': StockId, 'data-index':$index, name: 'Stock' + UserStockId}, click: $parent.onLimitValueCheck">  Limit Value
                            </label>
                        </div>
                    </div>
                </div>
            </fieldset>

        </div>
    </div>
    <div class="row padding3centt hidden stockofferprice">
        <div class="col-xs-12">
            <div class="col-xs-4">
                <span class="text-info fa-1_5x">Offer Price</span>
            </div>
            <div class="col-xs-8 ">
                <div class="pull-right">
                    <i class="fa icon-money28"></i>
                    <span class="text-info fa-1_5x" data-bind="text:OfferPrice"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="row padding3centt hidden stockofferprice">
        <div class="col-xs-12">
            <input type="text" class="stockPriceOffer" 
                   data-bind="attr:{'data-index': $index, 'data-typeid':StockId, 'data-currentvalue': CurrentValue}">
        </div>
    </div>
</div>
