<div class="container padding3centt well" data-bind="visible:stockCodes().length>0" id="stockSummarycontent-box">
    <div id="stockSummarycontent-wrapper" data-bind="foreach: stockCodes">
        <div class=" row padding3centb padding3centt">
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-4 section-box">
                        <h4>
                            <label class="stocktitle" data-bind="text:StockName">
                            </label>
                        </h4>
                    </div>
                    <div class="col-xs-8 text-right">
                        <i class="fa fa-5x text-info" data-bind="css: ImageFont"></i>
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row ">
            <div class="col-xs-12">
                <div class="col-xs-4">
                    <span class="fontsize90"> Ranking</span>
                </div>
                <div class="col-xs-8  text-right">
                    <span class="fa fa-times-circle-o fa-1x"></span>
                    <span class="" data-bind="text: Rank"></span>
                </div>
            </div>
        </div>
        <div class="row padding3centt">
            <div class="col-xs-12">
                <div class="col-xs-4">
                    <span class="fontsize90"> Total Unit</span>
                </div>
                <div class="col-xs-8  text-right">
                    <span class="fa fa-tasks  fa-1x"></span>
                    <span class="" data-bind="text: TotalUnit"></span>
                </div>
            </div>
        </div>
        <div class="row padding3centt">
            <div class="col-xs-12">
                <div class="col-xs-5">
                    <span class="fontsize90"> Current Value</span>
                </div>
                <div class="col-xs-7  text-right">
                    <span class="fa icon-money28 fa-1x"></span>
                    <span class="" data-bind="text:numeral(TotalCurrentValue).format('0,0.00a'),css:cashTextCss(TotalCurrentValue), attr:{title: TotalCurrentValue}"></span>
                </div>
            </div>
        </div><div class="row padding3centt">
            <div class="col-xs-12">
                <div class="col-xs-5">
                    <span class="fontsize90"> Purchased Value</span>
                </div>
                <div class="col-xs-7  text-right">
                    <span class="fa icon-money28 fa-1x"></span>
                    <span class="" data-bind="text:numeral(TotalPurchaseValue).format('0,0.00a'), attr:{title: TotalPurchaseValue}, css:SummaryChangeCss"></span>
                </div>
            </div>
        </div>

        <div class="row padding3centt">
            <div class="col-xs-12">
                <div class="col-xs-4">
                    <span class="fontsize90"> Change</span>
                </div>
                <div class="col-xs-8 text-right">
                    <i class="fa icon-money28 fa-1x" data-bind="css:SummaryChangeCss"></i>
                    <span class="fa-1x" data-bind="text:SummaryChangePlusMinus,css:SummaryChangeCss">            </span>
                </div>
            </div>
        </div>
        <div class="row padding3centt">
            <div class="col-xs-12">
                <div class="col-xs-4 ">
                    <span class="fontsize90"> Change %</span>
                </div>
                <div class="col-xs-8 text-right" title="Summary Change">
                    <i class="fa-1x" data-bind="css:SummaryChangeArrowCss"></i>
                    <span class="fa-1x" data-bind="text:SummaryChangePlusMinusPercent, css:SummaryChangeCss"></span>
                </div>
            </div>
        </div>
        <!-- ko if: ($index() != ($parent.stockCodes().length -1))-->
        <hr />
        <!-- /ko -->
        <!-- ko if: ($index() == ($parent.stockCodes().length -1))-->
        <div class="padding3centt"></div>
        <!-- /ko -->
    </div>
</div>
<div id="stockTopNSummary" class="well" data-bind="visible:stockTopN().length>0">
    @Html.Partial("_SummaryTop10")
</div>

