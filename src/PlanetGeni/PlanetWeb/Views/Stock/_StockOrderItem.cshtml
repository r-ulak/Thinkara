<div class="container padding3centt" id="stockOrderItemcontent-box">
    <div id="stockOrdercontent-wrapper" data-bind="foreach: stockCodes">
        <div class=" row">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="col-xs-3">
                            <div class="pull-left" title="Day Change Percent">
                                <span class="fa-1x" data-bind="css:DayChangeCss, text: DayChangePlusMinusPercent"></span>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="pull-left" title="DayChange">
                                <span class=" fa-1x" data-bind="text:DayChangePlusMinus, css:DayChangeCss">            </span>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="pull-left" title="Cost of stock">
                                <i class="fa icon-money28 fa-1x" data-bind="css:DayChangeCss"></i>
                                <span class="fa-1x" data-bind="text:numeral(CurrentValue).format('0,0.00'), css:DayChangeCss">            </span>
                            </div>
                        </div>
                        <div class="col-xs-1">
                            <i class="fa-1x" data-bind=" css:DayChangeArrowCss"></i>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row padding3centt">
                    <div class="col-xs-3 col-md-3 text-center">
                        <i class="fa fa-5x text-info" data-bind="css: ImageFont"></i>
                    </div>
                    <div class="col-xs-9 section-box">
                        <div class="row">
                            <div class="col-xs-10">
                                <div class="row">
                                    <div class="col-xs-7">
                                        <h4>
                                            <label data-bind="text: StockName"></label>
                                        </h4>
                                    </div>
                                    <div class="col-xs-5 ">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-2">
                                <span class="pull-right fontsize80" data-bind="text: Unit"></span>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12">
                                <p data-bind="text:Description" class="fontsize90"> </p>
                            </div>

                        </div>
                        <hr />

                    </div>


                </div>
                <div class="row">
                    <div class="row rating-desc">
                        <div class="col-xs-12">
                            <div class="col-xs-3 ">
                                <!-- ko if: TradeType == 'B' -->
                                Buy
                                <!-- /ko -->
                                <!-- ko if: TradeType == 'S' -->
                                Sell
                                <!-- /ko -->
                            </div>
                            <div class="col-xs-2 ">
                                <span class="fontsize70">
                                    <!-- ko if: OrderType == 'L' -->
                                    Limit
                                    <!-- /ko -->
                                    <!-- ko if: OrderType == 'M' -->
                                    Market
                                    <!-- /ko -->
                                </span>
                            </div>
                            <div class="col-xs-4">
                                <!-- ko if: OrderType == 'L' -->
                                <i class="fa icon-money28"> </i>
                                <span class="fontsize70" data-bind="text: OfferPrice + ' ea'"></span>
                                <!-- /ko -->
                            </div>
                            <div class="col-xs-2 ">
                                <strong class="fontsize80">
                                    <!-- ko if: Status == 'P' -->
                                    Order Pending
                                    <!-- /ko -->
                                    <!-- ko if: Status == 'C' -->
                                    Order Canceled
                                    <!-- /ko -->
                                    <!-- ko if: Status == 'D' -->
                                   Order Complete
                                    <!-- /ko -->
                                </strong>
                            </div>
                            <div class="col-xs-1">
                                <!-- ko if: Status == 'P' -->
                                <input type="checkbox" data-bind="attr:{'data-sid': StockId}, checked: $root.orderingItems, checkedValue:TradeId" />
                                <!-- /ko -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

