<div class=" row">
    <div class="col-xs-12">
        <div class="row">
            <div class="col-xs-2 text-center">
                <div class="col-xs-12">
                    <i class="fa fa-2x text-success" data-bind="css: ImageFont"></i>
                </div>
            </div>
            <div class="col-xs-4 section-box">
                <h5>
                    <label data-bind="text: StockName"></label>
                </h5>
            </div>
        </div>
    </div>
</div>
<div class="row fontsize90">
    <div class="col-xs-12">
        <div class="col-xs-2">
        </div>
        <div class="col-xs-6">
            <span>Current Value</span>
        </div>
        <div class="col-xs-4  text-right" data-bind="css: {'text-success': DayChange>=0, 'text-danger': DayChange<0}">
            <i class="fa icon-money28">
            </i>
            <label data-bind="text:numeral(CurrentValue).format('0,0.00')"></label>
        </div>
    </div>
</div>
<div class="row fontsize90">
    <div class="col-xs-12">
        <div class="col-xs-2">
        </div>
        <div class="col-xs-6">
            <span>Change</span>
        </div>
        <div class="col-xs-4 text-right" data-bind="css: {'text-success': DayChange>=0, 'text-danger': DayChange<0}">
            <i class="fa icon-money28">
            </i>
            <span data-bind="text:numeral(DayChangePercent).format('0,0.00') + '%'"></span>
        </div>
    </div>
</div>
<div class="row fontsize90">
    <div class="col-xs-12">
        <div class="col-xs-2">
        </div>
        <div class="col-xs-6">
            <span>ForecastValue</span>
        </div>
        <div class="col-xs-4 text-right" data-bind="css: {'text-success': DayChange>=0, 'text-danger': DayChange<0}">
            <i class="fa icon-money28">
            </i>
            <span data-bind="text:numeral(ForecastValue).format('0,0.00')"></span>
        </div>
    </div>
</div>
<div class="row fontsize90 padding3centb">
    <div class="col-xs-12">
        <div class="col-xs-2">
        </div>
        <div class="col-xs-6">
            <span>Ratings</span>
        </div>
        <div class="col-xs-4 text-right">
            <span data-bind="text:Ratings"></span>
        </div>
    </div>
</div>
