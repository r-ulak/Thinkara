<div id="adscontainer">
    <div class=" row">
        <div class="col-xs-12">
            <div class="panel panel-primary" id="myadscontent-box">
                <div class="panel-heading1 panel-heading">
                    <div class="flagsprite pull-right btn-link"
                         data-bind="css: 'flagsprite-' + CountryId().toLowerCase(), click: function(){viewCountryProfile(CountryId().toLowerCase())}"></div>
                    <span class="fa icon-billboard marginright6"></span> Buy Ads
                </div>
                <div class="panel-body">
                    @Html.Partial("_AdsItem")
                </div>
                <div class="panel-footer">
                    <div class="row fontsize80 padding3centt">
                        <div class="col-xs-6">
                            <strong>
                                Cost
                            </strong>
                        </div>
                        <div class="col-xs-6">
                            <div class="pull-right">
                                <span class="fa icon-money28 text-success"></span>
                                <span data-bind="text: numeral(cost()).format('0,0.00')" class="label label-success text-right
                                  fontsize110"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row fontsize80 padding3centt">
                        <div class="col-xs-6">
                            <strong>
                                Tax@@
                            </strong>
                            <small data-bind="text:taxRate">
                            </small>%
                        </div>
                        <div class="col-xs-6">
                            <div class="pull-right">
                                <span class="fa icon-money28 text-success"></span>
                                <span data-bind="text: numeral(tax()).format('0,0.00')" class="label label-success text-right
                                  fontsize110"></span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row fontsize80 ">
                        <div class="col-xs-6">
                            <strong class="text-success">
                                Available Cash
                            </strong>
                        </div>
                        <div class="col-xs-6">
                            <div class="pull-right">
                                <span class="fa icon-money28 text-success"></span>
                                <span data-bind="text: numeral(availableCash()).format('0,0.00')" class="label label-success text-right
                                  fontsize110"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row fontsize90 padding3centt">
                        <div class="col-xs-6">
                            <strong>
                                Total
                            </strong>
                        </div>
                        <div class="col-xs-6">
                            <div class="pull-right">
                                <span class="fa icon-money28 text-success"></span>
                                <span data-bind="text: numeral(totalCost()).format('0,0.00')" class="label label-success text-right
                                  fontsize110"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row fontsize80 padding3centt">
                        <div class="col-xs-12 text-danger">
                            <span data-bind="visible: availableCash()<totalCost()">
                                Not Enough Money
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-primary hidden" id="myadscontent-submit">
                <div class="panel-heading1 panel-heading">
                    <span>Buy Ads </span>
                </div>
                <div class="panel-body">
                    <div class="col-xs-12">
                        <span data-bind="text:Message">

                        </span>
                    </div>
                </div>
            </div>
            <button class="btn btn-default backbtn pull-right hidden">
                <span><i class="fa fa-home"></i> Home</span>
            </button>
            <button type="submit" id="saveads" data-bind="disable: availableCash()<totalCost()"
                    data-loading-text='
                <i class="fa fa-spinner fa-spin"></i> Saving...'
                class="btn btn-default pull-right">Buy Ads
            </button>
        </div>
    </div>
</div>

