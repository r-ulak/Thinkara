<div id="buymerchandisecontainer">
    <div class=" row">
        <div class="col-xs-12">
            <div class="panel panel-primary" id="mymerchandisecontent-box">
                <div class="panel-heading1 panel-heading">
                    <div class="flagsprite pull-right btn-link"
                         data-bind="css: 'flagsprite-' + CountryId().toLowerCase(), click: function(){viewCountryProfile(CountryId().toLowerCase())}"></div>

                    <span class="fa icon-shop3 marginright6"></span> Buy Property
                </div>
                <div class="panel-body">
                    <div class="panel-group accordion" id="merchandiseAccordion">
                        <div class="panel panel-default">
                            <div class="panel-heading active">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#merchandiseAccordion" href="#automobile">
                                        <i class="fa fa-car fa-1x"></i>   AutoMobile
                                    </a>
                                </h4>
                            </div>
                            <div id="automobile" class="accordionmerchandise panel-collapse collapse in">
                                <div class="panel-body">
                                    <div data-bind="foreach: { data: merchandiseCodes, afterRender: $root.AfterMerchandiseRenderAction}">
                                        <!-- ko if: MerchandiseTypeCode== 1 -->
                                        @Html.Partial("_BuyMerchandiseItem")
                                        <!-- /ko -->
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <div class="row padding3centt">
                                        <div class="col-xs-6">
                                            <span class="label label-info" data-bind="text: automerchandiseCount()"></span>
                                        </div>
                                        <div class="col-xs-6">
                                            <span id="autoshowmore" class="marginright16 btn btn-shadow btn-success btn-sm pull-right margintop-5"><i class="fa fa-plus"></i> </span>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#merchandiseAccordion" href="#realstate">
                                        <i class="fa fa-building-o fa-1x"></i>  Real State
                                    </a>
                                </h4>
                            </div>
                            <div id="realstate" class="accordionmerchandise panel-collapse collapse">
                                <div class="panel-body">
                                    <div data-bind="foreach: { data: merchandiseCodes, afterRender: $root.AfterMerchandiseRenderAction}">
                                        <!-- ko if: MerchandiseTypeCode== 2 -->
                                        @Html.Partial("_BuyMerchandiseItem")
                                        <!-- /ko -->
                                    </div>
                                </div>
                                <div class="panel-footer">
                                    <div class="row padding3centt">
                                        <div class="col-xs-12">
                                            <div class="col-xs-6">
                                                <span class="label label-info" data-bind="text: statemerchandiseCount()"></span>
                                            </div>
                                            <div class="col-xs-6">
                                                <span id="stateshowmore" class="marginright16 btn btn-shadow btn-success btn-sm pull-right margintop-5"><i class="fa fa-plus"></i> </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row padding3centt fontsize80">
                        <div class="col-xs-6">
                            <strong> Avaliable Cash </strong>
                        </div>
                        <div class="col-xs-6">
                            <div class="pull-right">
                                <span class="fa icon-money28 text-success"></span>
                                <span class="fontsize110" data-bind="text: numeral(AmountAvailable()).format('0,0.00')"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row fontsize80 padding3centt">
                        <div class="col-xs-6">
                            <strong>
                                BeforeTax
                            </strong>
                        </div>
                        <div class="col-xs-6">
                            <div class="pull-right">
                                <span class="fa icon-money28 text-success"></span>
                                <span class="label label-success text-right
                                  fontsize110" data-bind="text: numeral(amountBeforeTax()).format('0,0.00')">0.00</span>
                            </div>
                        </div>
                    </div>
                    <div class="row fontsize80 padding3centt">
                        <div class="col-xs-6">
                            <strong>
                                Tax@@
                            </strong>
                            <small data-bind="text:taxRate"></small>%
                        </div>
                        <div class="col-xs-6">
                            <div class="pull-right">
                                <span class="fa icon-money28 text-success"></span>
                                <span class="label label-success text-right
                                  fontsize110" data-bind="text: numeral(tax()).format('0,0.00')">0.00</span>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="row padding3centt fontsize90">
                        <div class="col-xs-6">
                            <strong> Total</strong>
                        </div>
                        <div class="col-xs-6">
                            <div class="pull-right">
                                <span class="fa icon-money28 text-success"></span>
                                <span class="label label-success text-right
                                  fontsize110" data-bind="text: (numeral(Amount()).format('0,0.00'))"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12">
                            <span class="fontsize90 pull-right text-warning padding3centt" data-bind="visible: ShowValidation()">
                                Not Enough Money to Buy
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-primary hidden" id="mymerchandisecontent-submit">
                <div class="panel-heading1 panel-heading">
                    <span>Buy</span>
                </div>
                <div class="panel-body">
                    <div class="col-xs-12">
                        <span data-bind="text:Message">

                        </span>
                    </div>
                </div>
            </div>

            <button class="btn btn-default backbtn pull-right hidden">
                <span><i class="fa fa-home"></i> Home</span>
            </button>
            <button class="btn btn-default  pull-left hidden" id="buymoremerchandise">
                <span><i class="fa fa-home"></i> Buy More</span>
            </button>
            <button type="submit" id="savemerchandise" data-bind="disable: showBuyValidation()"
                    data-loading-text='
                <i class="fa fa-spinner fa-spin"></i> Saving...'
                class="btn btn-default pull-right">Buy
            </button>
        </div>
    </div>
</div>
