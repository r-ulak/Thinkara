<div class="row">
    <div class="col-xs-12 ">
        <div class="well">
            <div class="row">
                <div class="col-xs-12">
                    <button type="submit" id="spinRoulet" data-bind="disable: $root.showSlotValidation, visible:rouletBet()>0"
                            data-loading-text='
                <i class="fa fa-spinner fa-spin"></i> Spining...'
                class="btn btn-default pull-right">Spin
            </button>
                    <button type="submit" id="playRoulet"
                            class="btn btn-default pull-left hidden">
                        Play Again
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <table>
                        <tr>
                            <td align="center">
                                <span class="text-center marginright-55">
                                    <i class="fa fa-2x fa-hand-o-down"></i>
                                </span>
                            </td>
                        </tr>
                        <tr>
                            <td class="spin-canvas" align="center" valign="center">
                                <canvas class="" width="434" height="434" style="width: 87%; float: right" id="myDrawingCanvas">
                                    <p class="noCanvasMsg" align="center">Sorry, your browser doesn't support canvas.<br />Please try another.</p>
                                </canvas>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="row margintop10 padding3centt">
                <div class="col-xs-12">
                    <div class="input-group">
                        <input type="text" id="rouletnum" data-bind="value:rouletNumber">
                    </div>
                </div>
            </div>
            <div class="row margintop10 padding3centt">
                <div class="col-xs-12">
                    <div class="input-group">
                        <input type="text" id="rouletpower" data-bind="value:rouletPower">
                    </div>
                </div>
            </div>
            <div class="row margintop10 padding3centt">
                <div class="col-xs-12">
                    <div class="input-group">
                        <input type="text" id="rouletbet" data-bind="value:rouletBet">
                    </div>
                </div>
            </div>
            <div class="row margintop10 padding3centt">
                <div class="col-xs-12">
                    <div class="col-xs-6">
                        Your Win
                    </div>
                    <div class="col-xs-6 text-right">
                        <i class="fa fa-1_5x icon-money28 text-success marginright6"></i>
                        <span data-bind="text:numeral( $root.rouletBet() * $root.slot3List.RouleteFactor()).format('0,0.00')"></span>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>