<div class="container padding3centt" data-bind="visible:showView()" id="merchandiseGiftItemcontent-box">
    <div id="merchandiseGiftcontent-wrapper" data-bind="foreach: merchandiseCodes">
        <div class=" row">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-xs-3 col-md-3 text-center">
                        <i class="fa fa-4x text-info" data-bind="css: ImageFont"></i>
                    </div>
                    <div class="col-xs-7 col-md-7 section-box">
                        <div class="row">
                            <div class="col-xs-10">
                                <h5>
                                    <label data-bind="text: Name"></label>
                                </h5>
                            </div>
                            <div class="col-xs-2">
                                <span class="pull-right" data-bind="text: Quantity"></span>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12">
                                <p data-bind="text:Description" class="fontsize90"> </p>
                            </div>

                        </div>
                        <hr />

                    </div>
                    <div class="col-xs-2">
                        <input type="text"
                               data-bind="attr: {value: MerchandiseCondition , 'data-fgcolor': dialColor(), 'data-id': MerchandiseTypeId}"
                               data-fgcolor="#9ABC32"
                               class="dial pull-right">
                    </div>

                </div>
                <div class="row">
                    <div class="row rating-desc">
                        <div class="col-xs-12">
                            <div class="col-xs-3">
                                <span class="merchandisetitle">
                                    <!-- ko if: MerchandiseTypeCode == 1 -->
                                    Auto Mobile
                                    <!-- /ko -->
                                    <!-- ko if: MerchandiseTypeCode == 2 -->
                                    Real State
                                    <!-- /ko -->
                                </span>
                            </div>
                            <div class="col-xs-4">
                                <i class="fa fa-recycle"></i>
                                <span class="fontsize70" data-bind="text: ResaleAt + ' ea'"></span>
                            </div>
                            <div class="col-xs-4">
                                <i class="fa icon-money28"> </i>
                                <span class="fontsize70" data-bind="text: PurchasedPrice + ' ea'"></span>
                            </div>
                            <div class="col-xs-1">
                                <input type="checkbox" data-bind="attr:{'data-mid': MerchandiseTypeId}, checked: $root.sendingItemsIndex, checkedValue:$index, click:$parent.clickSendGift" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

