<div class="clearfix"></div>
<div class="timeline-stat col-xs-12">
    <div class="col-xs-5 ">
        <a title="I Dig It!" class="marginright16">
            <span class="fontsize80">
                <strong class="fa fa-1_3x text-success marginright6 handcursor dig-it" data-bind="css:{'icon-emoticon37': DigType()==1, 'icon-emoticon101': DigType() !=1}, attr:{'data-digtype':DigType()}"></strong><strong data-bind="text:DigIt()"></strong>
            </span>
        </a>
        <a title="That's Cool" class="marginright16 ">
            <span class="fontsize80">
                <strong class="fa fa-1_3x text-warning marginright6 handcursor cool-it" data-bind="css:{'icon-happy24': DigType()==2, 'icon-happy38': DigType() !=2}, attr:{'data-digtype':DigType()}"></strong><strong data-bind="text:CoolIt()"></strong>
            </span>
        </a>
        <!-- ko if: ChildCommentCount() >  $('li[data-postid=' + PostId() + '] > article').size() -->
        <a title="Comments" class="morepostcomment fontsize90 marginright16" data-bind="attr:{title:ChildCommentCount()}">
            <span class="fontsize80">
                <strong class="fa fa-1_3x   fa-comments text-success marginright6 handcursor"></strong>
                <strong data-bind="text:ChildCommentCount()"></strong>
            </span>
        </a>
        <!-- /ko -->
    </div>
    <div class="col-xs-7">
        <input type="text" maxlength="400" placeholder="Add a comment.." class="form-control post-reply fontsize70">
    </div>
</div>
<div class="clearfix"></div>