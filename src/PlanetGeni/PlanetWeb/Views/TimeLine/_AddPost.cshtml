<div class="clearfix">
</div>
<div class="row" id="newsspot">
    <div class="layoutwidth">
        <div class="panel panel-primary">
            <div class="panel-body">
                <div class="row">
                    <div class="padding14 marginleft15">
                        <div class="status-upload">
                            <textarea placeholder="you have right to free speech, but will cost you some loot &#xf2cf;" data-bind="value:msgContent" id="spotContent" maxlength="2500" name="spotContent" class=" form-control  empty adsMessgae"></textarea>
                            <div class="paddingl14 padding2centt">
                                <span class="btn-file   paddingl14 marginright6" title="" data-toggle="tooltip" data-placement="bottom" data-original-title="Picture">
                                    <i class="fa fa-picture-o fa-1_3x handcursor"></i>
                                    <input type="file" id="spotupload">
                                </span>
                                <span class="btn handcursor paddingl14 text-danger" id="spotreset" title="" data-toggle="tooltip" data-placement="bottom" data-original-title="Reset">
                                    <i class="fa fa-trash-o fa-1_3x"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row padding14 margintop10" data-bind="visible: previewContent().length>0 || uploadprofilePicObj.blobSasUrl().length>0">
                    <div class="col-xs-12">
                        <div class="adspreview ">
                            <div class="timeline-panel timeline-post">
                                <div class="timeline-heading">
                                    <a class="btn-link" data-bind="click: function(){viewUserProfile(userId())}">
                                        <img data-bind="attr:{src: profilepicContainer + picture()}" class="avatar" alt="" />
                                        <h5 class="timeline-title" data-bind="text: fullName()"></h5>
                                        <small class="text-muted pull-right" data-bind="text: moment.utc().local().fromNow()">
                                        </small>
                                    </a>
                                </div>
                                <div class="timeline-body">
                                    <div id="spotuploadprw" data-bind="visible: uploadprofilePicObj.blobSasUrl().length>0" class="pull-left marginright16 thumbnail margintop10">
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="padding3centt fontsize85">
                                        <p data-bind="html:previewContent()" class=" marginright16"></p>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel-footer" data-bind="visible:cost()>0">
                <div class="row fontsize80 padding3centt">
                    <div class="col-xs-6">
                        <strong>
                            Cost
                        </strong>
                    </div>
                    <div class="col-xs-6">
                        <div class="pull-right">
                            <span class="fa icon-money28 text-success"></span>
                            <span data-bind="text: (cost()).toFixed(2)" class="label label-success text-right
                                  fontsize110"></span>
                        </div>
                    </div>
                </div>
                <div class="row fontsize80 padding3centt">
                    <div class="col-xs-6">
                        <strong>
                            Tax@@
                        </strong>
                        <small data-bind="text:taxRate">
                        </small>%
                    </div>
                    <div class="col-xs-6">
                        <div class="pull-right">
                            <span class="fa icon-money28 text-success"></span>
                            <span data-bind="text: numeral(tax()).format('0,0.00')" class="label label-success text-right
                                  fontsize110"></span>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row fontsize90 padding3centt">
                    <div class="col-xs-6">
                        <strong>
                            Total
                        </strong>
                    </div>
                    <div class="col-xs-6">
                        <div class="pull-right">
                            <span class="fa icon-money28 text-success"></span>
                            <span data-bind="text: numeral(totalCost()).format('0,0.00')" class="label label-success text-right
                                  fontsize110"></span>
                        </div>
                    </div>
                </div>
                <div class="row fontsize80 padding3centt">
                    <div class="col-xs-12 text-danger">
                        <span data-bind="visible: availableCash()<totalCost()">
                            Not Enough Money
                        </span>
                    </div>
                </div>
            </div>

        </div>
        <button type="submit" id="savespot" data-bind="visible: availableCash()>=totalCost() && cost()>0"
                data-loading-text='
                <i class="fa fa-spinner fa-spin"></i> Sharing...'
                class="btn btn-default pull-right">Buy Spot
            </button>
    </div>
</div>
