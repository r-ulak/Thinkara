<div class="row" id="bankviewcontainer">
    <div class="col-xs-12">
        <div class="panel panel-primary" id="bankview-box">
            <div class="panel-heading1 panel-heading">
                <div class="flagsprite pull-right btn-link"
                     data-bind="css: 'flagsprite-' + CountryId().toLowerCase(), click: function(){viewCountryProfile(CountryId().toLowerCase())}"></div>
                <span class="fa icon-piggy7 marginright6"></span> Account Summary
            </div>
            <div class="panel-body">
                @Html.Partial("_BankAccountHomeItem")
            </div>
            <div class="panel-footer">
                <div class="row padding3centt fontsize90">
                    <div class="col-xs-12">
                        <div class="col-xs-4">
                            <strong> Total Asset</strong>
                        </div>
                        <div class="col-xs-8 text-right text-success">
                            <i class="fa icon-money28 text-success"></i>
                            <span data-bind="text:numeral(totalAsset()).format('0,0.00a'),css:cashTextCss(totalAsset()), attr:{title: totalAsset()}"> </span>
                        </div>
                    </div>
                </div>
                <div class="row padding3centb fontsize90">
                    <div class="col-xs-12">
                        <div class="col-xs-4">
                            <strong> Total Debt</strong>
                        </div>
                        <div class="col-xs-8 text-right text-danger">
                            <i class="fa icon-money28 text-success"></i>
                            <span data-bind="text:numeral(totalDebt()).format('0,0.00a'),css:cashTextCss(totalDebt()), attr:{title: totalDebt()}"> </span>
                        </div>
                    </div>
                </div>
                <div class="row dividertop">
                    <div class="col-xs-12 padding2centt">
                        <div class="col-xs-4">
                            <strong> Net Worth</strong>
                        </div>
                        <div class="col-xs-8 text-right text-info">
                            <i class="fa icon-money28 text-success"></i>
                            <span data-bind="text:numeral(totalAsset()-totalDebt()).format('0,0.00a'),css:cashTextCss(totalAsset()-totalDebt()), attr:{title: totalAsset()-totalDebt()}"> </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



