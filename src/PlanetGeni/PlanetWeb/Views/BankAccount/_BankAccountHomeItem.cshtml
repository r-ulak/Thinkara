<div class="container">
    <div class="row" data-bind="visible: bankViewDetails().length>0">
        <div class="well well-sm fontsize90" data-bind="foreach:{data:bankViewDetails}">
            <div class="row">
                <div class="col-xs-12">
                    <div class="col-xs-2">
                        <i class="fa-3x" data-bind="css:ImageFont"></i>
                    </div>
                    <div class="col-xs-5  vcenter">
                        <span class="text-left" data-bind="text:CapitalType"></span>
                    </div>
                    <div class="col-xs-5 text-right vcenter">
                        <i class="fa icon-money28 text-success"></i>
                        <span class="text-left" data-bind="text:numeral(Total).format('0,0.00a'),css:cashTextCss(Total), attr:{title: Total}"></span>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
