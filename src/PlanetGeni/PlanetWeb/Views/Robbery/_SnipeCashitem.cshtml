<div class="row">
    <div class="col-md-12">
        <div class="well">
            <form role="form"  class="form-horizontal">
                <fieldset>
                    <legend class="text-warning fontsize120">Your Victim</legend>
                    <div class="row margintop5">
                        <div class="col-xs-12 validation-group ">
                            <div class="input-group bottomMarging15 ">
                                <span class="input-group-addon">
                                    <i class="fa icon-money28"></i>
                                </span>
                                <div id="ddsnipeFriends" class="wrapper-dropdown-3 backwhite" tabindex="1">
                                    <span class="text-warning">Select Victim</span>
                                    <ul class="dropdown" data-bind="foreach:{data: friendDetailsDTO()}">
                                        <li data-bind="attr: { 'data-id' : FriendUserId,
    'data-countrycode' : CountryId,'data-onlinestatus' : OnlineStatus,'data-picture' : Picture,'data-fullname' : FullName }">
                                            <a>
                                                <div class="flagsprite pull-right" data-bind="css: 'flagsprite-' + CountryId.toLowerCase()"></div>
                                                <i data-bind="css: 'user-status' + OnlineStatus" class="pull-left"></i>
                                                <img width="28px" height="28px" data-bind="attr: {src: profilepicContainer+Picture }">
                                                <span data-bind="text: FullName"></span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row " id="selectedVictim" data-bind="visible:victimCashId()>0">
                        <div class="col-xs-12">
                            <div class="col-xs-4">
                                <a class="btn-link" data-bind="click: function(){viewUserProfile(victimCashId())}">
                                    <i data-bind="css: 'user-status' + victimCashOnlineStatus" class="pull-left"></i>
                                    <img width="56px" data-bind="attr: {src: profilepicContainer + victimCashPicture(), title: victimCashFullName}">
                                </a>
                            </div>
                            <div class="col-xs-7">
                                <a class="btn-link" data-bind="click: function(){viewUserProfile(victimCashId())}">
                                    <span data-bind="text: victimCashFullName, attr:{title: victimCashFullName}"></span>
                                </a>
                            </div>
                            <div class="col-xs-1">
                                <a class="btn-link pull-right " data-bind="click: function(){viewCountryProfile(victimCashCountryCode().toLowerCase())}">
                                    <div class="flagsprite btn-link" data-bind="css: 'flagsprite-' + victimCashCountryCode().toLowerCase(), attr:{title: getCountryName(victimCashCountryCode())}"></div>
                                </a>

                            </div>
                        </div>
                        <div class="col-xs-12 fontsize90">
                            <div class="col-xs-6">
                                <span>Allowed Snipe Amount</span>
                            </div>
                            <div class="col-xs-6 text-success">
                                <i class="fa icon-money28"></i>
                                <span data-bind="text: numeral(amountAllowedSnipped()).format('0,0.00')">

                                </span>
                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="row margintop5">
                        <div class="col-xs-12 validation-group">
                            <div class="input-group">
                                <input type="text" id="snipeAmount" data-bind="value:totalAmountSnipped">
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>