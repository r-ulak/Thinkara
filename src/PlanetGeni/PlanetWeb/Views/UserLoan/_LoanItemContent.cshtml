<div class="well well-sm">
    <div class="row">
        <div class="col-xs-3 col-md-3 text-center">
            <i data-bind="css: 'user-status' + OnlineStatus" class="pull-left"></i>
            <img class="pull-left btn-link" width="28px"
                 data-bind="attr: {src: profilepicContainer+Picture , title: FullName }, click: function(){viewUserProfile(UserId)}">

        </div>
        <div class="col-xs-7 col-md-7 section-box">
            <h5>
                <!-- ko if: LoanSourceType.indexOf("B") > -1 -->
                <strong class="fontsize90">Lendor:</strong>
                <!-- /ko -->
                <!-- ko if: LoanSourceType.indexOf("L") > -1 -->
                <strong>Borrower:</strong>
                <!-- /ko -->
                <strong class="fontsize80 btn-link" data-bind="text: FullName, click: function(){viewUserProfile(UserId)}"></strong>
            </h5>
            <span class="fa icon-money28 fa-1x"></span>
            <span class="fontsize90" title="Amount Borrwed or lended" data-bind="text:numeral(LoanAmount).format('0,0.00')"></span>
            <!-- ko if: LoanSourceType.indexOf("B") > -1 &&  LeftAmount >0 &&  Status.indexOf("A") > -1 -->
            <button class="btn btn-default btn-sm btn-shadow pull-right" title="pay loan" data-bind="click: function(){ payLoan(TaskId, $index())}">
                <span class="fa-1x"><i class="fa fa-credit-card"></i> Pay Loan</span>
            </button>
            <!-- /ko -->
        </div>
        <div class="col-xs-2 col-md-2">
            <span class="loantitle">
                <!-- ko if: LoanSourceType.indexOf("B") > -1 -->
                <i class="fa fa-arrow-circle-o-down text-danger fa-2x" title="Loan Borrowed"></i>
                <!-- /ko -->
                <!-- ko if: LoanSourceType.indexOf("L") > -1 -->
                <i class="fa fa-arrow-circle-o-up text-success fa-2x" title="Loan Lended"></i>
                <!-- /ko -->
            </span>

        </div>
    </div>
    <div class="row padding3centt">
        <div class="row rating-desc">
            <div class="col-xs-12">
                <div class="col-xs-3 col-md-3">
                    <!-- ko if: Status.indexOf("A") > -1 -->
                    <i class="fa icon-handshake1 fa-2x  text-success" title="Loan Approved"></i>
                    <!-- /ko -->
                    <!-- ko if: Status.indexOf("D") > -1 -->
                    <i class="fa icon-dislike fa-2x text-danger" title="Loan Denied"></i>
                    <!-- /ko -->
                    <!-- ko if: Status.indexOf("P") > -1 -->
                    <i class="fa icon-sand15 fa-2x text-warning" title="Loan Pending Approval"></i>
                    <!-- /ko -->
                </div>
                <div class="col-xs-4 col-md-4">

                    <!-- ko if: LoanSourceType.indexOf("L") > -1 -->
                    <i class="fa fa-plus-circle text-success"></i>
                    <span class="fontsize80  text-success" title="Amount Left To Collect" data-bind="text: numeral(LeftAmount).format('0,0.00')"></span>
                    <!-- /ko -->
                    <!-- ko if: LoanSourceType.indexOf("B") > -1 -->
                    <i class="fa fa-minus-circle text-danger"></i>
                    <span class="fontsize80  text-danger" title="Amount Left To Pay" data-bind="text: numeral(LeftAmount).format('0,0.00')"></span>
                    <!-- /ko -->
                </div>
                <div class="col-xs-4 col-md-4">
                    <!-- ko if: LoanSourceType.indexOf("B") > -1 -->
                    <span class="fa icon-money28 text-danger"></span>
                    <span class="fontsize80  text-danger" title="Paid Amount" data-bind="text: numeral(PaidAmount).format('0,0.00')"></span>
                    <!-- /ko -->
                    <!-- ko if: LoanSourceType.indexOf("L") > -1 -->
                    <span class="fa icon-money28 text-success"></span>
                    <span class="fontsize80  text-success" title="Collected Amount" data-bind="text: numeral(PaidAmount).format('0,0.00')"></span>
                    <!-- /ko -->
                </div>
                <div class="col-xs-1 col-md-1">
                    <div class="pull-right fontsize70">
                        <span data-bind="text: MonthlyInterestRate" title="Monthly Intrest rates"></span>%
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>