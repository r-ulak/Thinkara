<div id="loanRequestcontainer">
    <div class=" row">
        <div class="col-xs-12">
            <div class="panel panel-primary" id="myloanRequestcontent-box">
                <div class="panel-heading1 panel-heading">
                    <div class="flagsprite pull-right btn-link"
                         data-bind="css: 'flagsprite-' + CountryId().toLowerCase(), click: function(){viewCountryProfile(CountryId().toLowerCase())}"></div>  <span class="fa icon-businessman90 marginright6">
                    </span> Ask For Loan
                </div>
                <div class="panel-body">
                    @Html.Partial("_AskForLoan")
                </div>
                <div class="panel-footer" id="askloanfooter">
                    <div class="row margintop5 fontsize90">
                        <div class="col-xs-6 text-success">
                            <span>Qualified Rate %</span>
                        </div>
                        <div class="col-xs-6">
                            <span class="pull-right" data-bind="text:MinMonthlyIntrestRate().toFixed(2)">
                            </span>
                        </div>
                    </div>
                    <div class="row margintop5 fontsize90 ">
                        <div class="col-xs-6 text-success">
                            <strong>
                                Qualified Loan

                            </strong>
                        </div>
                        <div class="col-xs-6">
                            <span class="pull-right" data-bind="text:numeral(QualifiedAmount()).format('0,0.00')">
                            </span>
                            <i class="fa icon-money28 pull-right marginright16 fa-1x"></i>
                        </div>
                    </div>
                    <hr />
                    <div class="row">
                        <div class="col-xs-12">
                            <p>
                                You can Request for loan from Bank with Qualified Rate or request a friend for a desired rate.
                                <strong>All Loans has a fixed return time frame of 720 hrs</strong>.
                                Any non-payment by full amount within the time limit would start affecting your experience score and credit score.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-primary hidden" id="myloanRequestcontent-submit">
                <div class="panel-heading1 panel-heading">
                    <span>Ask For Loan</span>
                </div>
                <div class="panel-body">
                    <div class="col-xs-12">
                        <span data-bind="text:Message">

                        </span>
                    </div>
                </div>
            </div>

            <button class="btn btn-default backbtn pull-right hidden">
                <span><i class="fa fa-home"></i> Home</span>
            </button>
            <button class="btn btn-default  pull-left hidden" id="askmoreloan">
                <span><i></i> Ask For More</span>
            </button>


            <button type="submit" id="saveLoanRequest"
                    data-loading-text='
                <i class="fa fa-spinner fa-spin"></i> Saving...'
                class="btn btn-default pull-right">Ask For Loan
            </button>
        </div>
    </div>
</div>
