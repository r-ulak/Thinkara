<div class="row">
    <div class="col-md-12">
        <div class="well">
            <form role="form" id="requestloanform" class="form-horizontal">
                <fieldset>
                    <legend class="text-warning fontsize120">Request Loan From</legend>
                    <div class="row " id="selectedLendor">
                        <div class="col-xs-4">
                            <i data-bind="css: 'user-status' + lendorOnlineStatus()" style="height:56px" class="pull-left"></i>
                            <img width="56px" data-bind="attr: {src: profilepicContainer + lendorPicture() }">
                        </div>
                        <div class="col-xs-7">
                            <span data-bind="text:lendorFullName"></span>
                        </div>
                        <div class="col-xs-1">
                            <div class="flagsprite pull-right" data-bind="css: 'flagsprite-' + lendorCountryCode().toLowerCase()"></div>
                        </div>
                    </div>
                    <hr />
                    <div class="row margintop5">
                        <div class="col-xs-12 validation-group ">
                            <div class="input-group bottomMarging15 ">
                                <span class="input-group-addon">
                                    <input id="radiolendorFriend" type="radio" name="loanType">
                                </span>
                                <div id="dduserloanFriends" class="wrapper-dropdown-3 backwhite" tabindex="1">
                                    <span class="text-warning">Select Lendor</span>
                                    <ul class="dropdown" data-bind="foreach: friendDetailsDTO">
                                        <li data-bind="attr: { 'data-id' : FriendUserId,
    'data-countrycode' : CountryId,'data-onlinestatus' : OnlineStatus,'data-picture' : Picture,'data-fullname' : FullName }">
                                            <a >
                                                <div class="flagsprite pull-right" data-bind="css: 'flagsprite-' + CountryId.toLowerCase()"></div>
                                                <i data-bind="css: 'user-status' + OnlineStatus" class="pull-left"></i>
                                                <img width="28px" height="28px" data-bind="attr: {src: profilepicContainer+Picture }">
                                                <span data-bind="text: FullName"></span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                                <input type="hidden" name="loanLendorId" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-12 validation-group">
                            <div class="input-group bottomMarging15 ">
                                <span class="input-group-addon">
                                    <input id="radiolendorBank" type="radio" checked name="loanType">
                                </span>
                                <span class="form-control" id="lendorBank"> Bank</span>

                            </div>
                        </div>
                    </div>

                    <hr />
                    <div class="row margintop5">
                        <div class="col-xs-12 validation-group">
                            <div class="input-group">
                                <input type="text" id="loanAmount" name="loanAmount">
                            </div>
                        </div>
                    </div>
                    <div class="row margintop5">
                        <div class="col-xs-12 validation-group">
                            <div class="input-group">
                                <input type="text" id="loanPercent">
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>


